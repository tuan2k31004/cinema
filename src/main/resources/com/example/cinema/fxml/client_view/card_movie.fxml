<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema.controller.CardMovieController">
    <children>
        <VBox prefWidth="182.0" spacing="5.0">
            <children>
                <ImageView fx:id="imgThumbnail" fitHeight="260.0" fitWidth="182.0" pickOnBounds="true"/>
                <Label fx:id="lbName" wrapText="true">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <VBox>
                    <children>
                        <HBox fillHeight="false">
                            <children>
                                <Label prefHeight="20.0" prefWidth="63.0" text="Thể loại: ">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lbGenres" prefWidth="125.0" wrapText="true">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <HBox fillHeight="false">
                            <children>
                                <Label prefHeight="20.0" prefWidth="82.0" text="Thời lượng: ">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lbDuration" wrapText="true">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
        <JFXButton mnemonicParsing="false" onMouseClicked="#showBookingMovieTicket" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: red; -fx-font-weight: bold;" text="MUA VÉ" textFill="WHITE" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
    </children>
</AnchorPane>
